{
  "name": "dns_covert",
  "author": "@RedTeam",
  "description": "DNS covert channel C2 profile with DNS over HTTPS and steganographic encoding support",
  "version": "1.0.0", 
  "is_p2p": false,
  "is_server_routed": true,
  "parameters": [
    {
      "name": "dns_server",
      "description": "DNS Server for queries",
      "default_value": "8.8.8.8",
      "verifier_regex": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$",
      "required": true,
      "parameter_type": "String"
    },
    {
      "name": "dns_port",
      "description": "DNS Server Port",
      "default_value": 53,
      "verifier_regex": "^[0-9]+$",
      "required": true,
      "parameter_type": "Number"
    },
    {
      "name": "domain_name",
      "description": "Domain name for DNS queries",
      "default_value": "example.com",
      "required": true,
      "parameter_type": "String"
    },
    {
      "name": "subdomain_length",
      "description": "Maximum subdomain length",
      "default_value": 63,
      "verifier_regex": "^[0-9]+$",
      "required": false,
      "parameter_type": "Number"
    },
    {
      "name": "query_types",
      "description": "DNS query types to use",
      "default_value": "A,AAAA,TXT,CNAME",
      "required": false,
      "parameter_type": "String"
    },
    {
      "name": "encoding_method", 
      "description": "Data encoding method",
      "default_value": "base32",
      "choices": ["base32", "base64", "hex"],
      "required": false,
      "parameter_type": "ChooseOne"
    },
    {
      "name": "enable_doh",
      "description": "Use DNS over HTTPS",
      "default_value": true,
      "required": false,
      "parameter_type": "Boolean"
    },
    {
      "name": "doh_server",
      "description": "DNS over HTTPS server",
      "default_value": "https://cloudflare-dns.com/dns-query",
      "required": false,
      "parameter_type": "String"
    },
    {
      "name": "enable_dot",
      "description": "Use DNS over TLS",
      "default_value": false,
      "required": false,
      "parameter_type": "Boolean"
    },
    {
      "name": "dot_server",
      "description": "DNS over TLS server",
      "default_value": "1.1.1.1",
      "required": false,
      "parameter_type": "String"
    },
    {
      "name": "callback_interval",
      "description": "DNS query interval (seconds)",
      "default_value": 30,
      "verifier_regex": "^[0-9]+$",
      "required": false,
      "parameter_type": "Number"
    },
    {
      "name": "callback_jitter",
      "description": "DNS query jitter (0-100)",
      "default_value": 15,
      "verifier_regex": "^[0-9]+$", 
      "required": false,
      "parameter_type": "Number"
    },
    {
      "name": "max_retries",
      "description": "Maximum DNS query retries",
      "default_value": 3,
      "verifier_regex": "^[0-9]+$",
      "required": false,
      "parameter_type": "Number"
    },
    {
      "name": "steganography_key",
      "description": "Steganography encoding key",
      "default_value": "",
      "required": false,
      "parameter_type": "String"
    },
    {
      "name": "killdate",
      "description": "Kill Date (YYYY-MM-DD)",
      "default_value": "2025-12-31",
      "verifier_regex": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "required": false,
      "parameter_type": "Date"
    }
  ]
}
